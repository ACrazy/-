/* pages/details/details.wxss */
page {
  background-color: #ececec;
}
.user-bg {
  background-color: white;
  position: relative;
  height: 15px;
  line-height: 15px;
  margin-top: 10px;
}
.user-title {
  position: absolute;
  font-size: 12px;
  color: #908f8f;
  left: 2%;
}
.user-icon {
  position: absolute;
  font-size: 12px;
  color: #908f8f;
  right: 2%;
}
.view-bottom {
  position: absolute;
  bottom: 0px;
  display: flex;
  width: 100%;
  height: 50px;
  font-size: 15px;
  line-height: 50px;
  background-color: white;
  text-align: center;
}
.view-bottom-left {
  display: inline;
  flex-grow: 1;
  border-right: 1px solid #ececec;
}
.view-bottom-right {
  display: inline;
  flex-grow: 1;
}
.bot-view {
  position: relative;
  height: 54px;
  width: 96%;
  left: 2%;
  border-bottom: .5px solid #ececec;
}
.list-icon {
  height: 40px;
  width: 40px;
  margin-left: 0px;
  margin-top: 7px;
}
.list-tittle {
  position: absolute;
  top: 15px;
  left: 48px;
  font-size: 18px;
}
.list-odd {
  color: #42c02e;
  position: absolute;
  font-size: 16px;
  top: 18px;
  right: 0px;
}