/* pages/editProperty/editProperty.wxss */
.bg-view {
   width: 100%;
   height: 70px;
   background-color: #1593ff;
   position: relative;
}
.zczl-left-num {
  position: absolute;
  left: 0;
  height: 70px;
  width: 50%;
}
.zczl-right-num {
  position: absolute;
  right: 0;
  height: 70px;
  width: 50%;
}
.property-num {
  position: absolute;
  font-size: 18px;
  color: white;
  top: 10px;
  left: 6%;
}
.property-num-name {
  font-size: 14px;
  color: white;
  position: absolute;
  left: 6%;
  top: 35px;
}
.property-to {
  position: absolute;
  right: 6%;
  top: 17px;
  color: white;
  background-color: #309efd;
  text-align: center;
  line-height: 30px;
  height: 30px;
  width: 50px;
  font-size: 14px;
}
.thr-coin {
  position: absolute;
  height: 30px;
  width: 30px;
  transform: rotate(45deg);
  background-color: white;
  left: 20%;
  top: 65px;
}
.bot-view {
  position: relative;
  height: 54px;
  width: 90%;
  left: 5%;
  border-bottom: .5px solid #ececec;
}
.list-icon {
  height: 40px;
  width: 40px;
  margin-left: 0px;
  margin-top: 7px;
}
.list-tittle {
  position: absolute;
  top: 8px;
  left: 48px;
  font-size: 14px;
}
.list-detail {
  color: #908f8f;
  position: absolute;
  font-size: 11px;
  top: 30px;
  left: 48px;
}
.list-odd {
  color: #42c02e;
  position: absolute;
  font-size: 16px;
  top: 18px;
  right: 0px;
}
.flex-box-detail {
  /* display: none; */
}
.input-output {
  border-bottom: .5px dashed #ececec;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  position: relative;
}
.input-num {
  color: #ff4829;
  position: absolute;
  left: 3%;
}
.output-num {
  color: #42c02e;
  position: absolute;
  right: 3%;
}
.flex-box {
  position: relative;
  height: 50px;
  width: 100%;
  border-bottom: 1px solid #ececec;
}
.flex-item-2 {
  position: relative;
  text-align: right;
}
.flex-item-6 {
  position: relative;
}
.flex-item-1 {
  position: relative;
}
.thr-coin-min-down {
  position: absolute;
  height: 10px;
  width: 10px;
  transform: rotate(-45deg);
  border-bottom: 1px solid #999999;
  border-left: 1px solid #999999;
  right: 5%;
  margin-top: 15px; 
}
.thr-coin-min-top {
  position: absolute;
  height: 10px;
  width: 10px;
  transform: rotate(135deg);
  border-bottom: 1px solid #999999;
  border-left: 1px solid #999999;
  right: 5%;
  margin-top: 20px; 
}
.year-ui {
  left: 3%;
  color: #999999;
  margin-top: 25px; 
  font-size: 14px;
  position: absolute;

}
.month-ui {
  /* float: right; */
  margin-left: 18px;
  left: 3%;
  color: #999999;
  margin-top: 5px; 
  font-size: 14px;
  position: absolute;

}
.input-num-min {
  left: 18%;
  margin-top: 5px; 
  font-size: 14px;
  color: #ff4829;
  position: absolute;
}
.output-num-min {
  left: 18%;
  margin-top: 25px; 
  color: #42c02e;
  position: absolute;
  font-size: 14px;
}